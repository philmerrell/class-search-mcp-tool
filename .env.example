# =============================================================================
# Boise State Class Search MCP Tool - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For local development, these are used by docker-compose
# For deployment, set these in GitHub Secrets/Variables or your CI/CD environment

# =============================================================================
# AWS Account Configuration
# =============================================================================

# AWS account where the Lambda will be deployed
CDK_AWS_ACCOUNT_ID=123456789012

# AWS region for deployment
CDK_AWS_REGION=us-west-2

# =============================================================================
# Project Configuration
# =============================================================================

# Prefix for all AWS resources (ECR repo, Lambda function, IAM role, etc.)
CDK_PROJECT_PREFIX=class-search-mcp-tool

# Docker image tag (use "latest" for dev, commit SHA for production)
CDK_IMAGE_TAG=latest

# =============================================================================
# Lambda Configuration
# =============================================================================

# Lambda memory in MB (512-10240)
CDK_LAMBDA_MEMORY_MB=512

# Lambda timeout in seconds (1-900)
CDK_LAMBDA_TIMEOUT_SECONDS=30

# =============================================================================
# OpenSearch Configuration (Cross-Account Access)
# =============================================================================

# OpenSearch domain endpoint (without https://)
CDK_OPENSEARCH_HOST=search-opensearch-dev-01-xxxxxxxxxx.us-west-2.es.amazonaws.com

# Region where OpenSearch is deployed
CDK_OPENSEARCH_REGION=us-west-2

# AWS account ID that owns the OpenSearch domain (for cross-account access)
CDK_OPENSEARCH_ACCOUNT_ID=123456789012

# OpenSearch domain name (used for IAM policy)
CDK_OPENSEARCH_DOMAIN_NAME=opensearch-dev-01

# =============================================================================
# Local Development Only
# =============================================================================

# AWS profile to use for local OpenSearch access (not used in Lambda)
AWS_PROFILE=default

